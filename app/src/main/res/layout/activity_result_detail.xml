<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result_detail_background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/result_detail_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/result_detail_back_circle"
                android:contentDescription="@string/result_close"
                android:padding="8dp"
                android:src="@android:drawable/ic_media_previous"
                android:tint="@color/overlay_accent" />

            <TextView
                android:id="@+id/result_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="serif"
                android:text="@string/result_title"
                android:textColor="@color/overlay_accent"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/result_detail_card"
            android:orientation="vertical"
            android:padding="16dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <TextView
                    android:id="@+id/result_detail_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/result_processing"
                    android:textColor="#2F3441"
                    android:textSize="16sp" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
