<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/overlay_base"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerInside"
                    android:src="@drawable/overlay_icon" />

                <TextView
                    android:id="@+id/result_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Potential Issues"
                    android:textColor="@color/black"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/result_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/result_status_chip"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="Preparing OCR..."
                    android:textColor="@color/black"
                    android:textAppearance="?attr/textAppearanceBodySmall" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="8dp">

                <ScrollView
                    android:id="@+id/result_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="ifContentScrolls">

                    <TextView
                        android:id="@+id/result_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="48dp"
                        android:text="Analyzing captured text..."
                        android:textAppearance="?attr/textAppearanceBodyMedium" />
                </ScrollView>

                <LinearLayout
                    android:id="@+id/result_more_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/result_fade_bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/result_more_overlay_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/result_view_more"
                        android:textColor="@color/black"
                        android:textAppearance="?attr/textAppearanceLabelLarge" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="end"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/result_close"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/overlay_base_dark"
                    app:strokeColor="@android:color/holo_red_dark"
                    app:strokeWidth="1dp"
                    app:cornerRadius="999dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/result_close" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/result_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/result_copy"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/overlay_base_dark"
                    app:strokeColor="@android:color/holo_green_dark"
                    app:strokeWidth="1dp"
                    app:cornerRadius="999dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
